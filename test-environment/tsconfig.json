{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
